<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	 <class name="hibernate.Curso" table="mdl_course">
		 <meta attribute="class-description">
		 	A classe contém os detalhes sobre o curso em questão
		 </meta>
		 <id name="id" type="int" column="id">
		 	<generator class="native"/>
		 </id>
		 <property name="idNumber" column="idnumber" type="string"/>
		 <property name="fullName" column="fullname" type="string"/>
		 <property name="timeCreated" column="timecreated" type="long"/>
	 </class>
</hibernate-mapping>